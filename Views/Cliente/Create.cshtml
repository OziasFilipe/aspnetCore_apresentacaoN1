<script>  
    $(document).ready(function () {
        $('#cep').inputmask('99999-999');
    });
</script>

<script>
    function formatarCPFCNPJ(input) {
        var value = input.value.replace(/\D/g, ''); // Remove todos os caracteres que não são dígitos

        if (value.length <= 11) { // Se o comprimento do valor for igual ou menor que 11, formatar como CPF
            value = value.replace(/^(\d{3})(\d{3})(\d{3})(\d{2})$/, '$1.$2.$3-$4');
        } else { // Se for maior que 11, formatar como CNPJ
            value = value.replace(/^(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})$/, '$1.$2.$3/$4-$5');
        }

        input.value = value;
    }
</script>

